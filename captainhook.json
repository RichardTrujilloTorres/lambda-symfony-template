{
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "composer cs:fix"
            },
            {
                "action": "composer stan"
            }
        ]
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "#^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test)(\\([a-z0-9_-]+\\))?: .+#"
                }
            }
        ]
    }
}
